<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".GiveARideActivity">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".GiveARideActivity" android:background="@color/colorPrimary">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/textView8" android:text="Date"
                android:textSize="18sp" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintBottom_toTopOf="@+id/date" android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/availableSeats"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/email"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp" android:hint="Email"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/nameText"
                android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/nameText" android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
                android:hint="Name" android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" app:layout_constraintTop_toTopOf="parent"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/cellphone" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/email" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
                android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:hint="Cellphone Number"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/mountain" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/cellphone" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
                android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:hint="Destination Mountain"/>
        <CalendarView
                android:layout_width="0dp"
                android:layout_height="342dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/date" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/availableSeats"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/availableSeats" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/mountain" android:hint="Number of available seats"
                android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10"
                android:id="@+id/time" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/date" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
                android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:hint="Time (hh/mm)"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/comments" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/time" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
                android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:hint="Comments"/>
        <Button
                android:text="Share Ride!"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/shareRide" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/comments" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp" android:onClick="shareRide"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>