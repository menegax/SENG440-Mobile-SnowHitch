<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button2" app:layout_constraintHorizontal_bias="0.498" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/button1" android:text="@string/button2"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button1" app:layout_constraintHorizontal_bias="0.498" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:text="@string/button1"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button3" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/button2" android:text="@string/button3"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button4" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/button3" app:layout_constraintHorizontal_bias="0.501"
            android:text="@string/button4"/>
    <TextView
            android:layout_width="225dp"
            android:layout_height="64dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/textView" android:text="@string/editText"
            android:textSize="36sp"/>
</android.support.constraint.ConstraintLayout>